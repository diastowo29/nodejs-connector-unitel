extends layout

block content
  h1= title
  .main.container
    .row
      .col-md-6.col-md-offset-3
        form(method='POST' action=return_url)
            div.form-group
              label(for='name') Name:
              input#name.form-control(type='text', value=name, name='name', readonly)
              input#name.form-control(type='text', value=metadata, name='metadata', hidden)
              input#name.form-control(type='text', value=state, name='state', hidden)
            button.btn.btn-primary(type='submit') Submit
